                    <a href="#" type="button" class="btn mt-3 btn-success">Muallifning boshqa e'lonlari</a>
                    <a href="/posters/{{poster._id}}/edit" type="button" class="btn mt-3 btn-warning">O'zgartirish</a>
                    <form class="d-grid" action="/posters/{{poster._id}}/delete" method="post">
                      <button type="submit" class="btn mt-3 btn-danger">O'chirish</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
